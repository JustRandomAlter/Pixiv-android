<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="@dimen/six_dp"
        android:layout_marginStart="@dimen/eight_dip"
        android:layout_marginTop="@dimen/eight_dip"
        android:layout_marginBottom="@dimen/eight_dip"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@animator/touch_raise"
        android:id="@+id/card"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/all_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/card"
        android:layout_alignTop="@+id/card"
        android:background="#40000000"
        android:padding="6dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/title"
        android:text="我是标题"
        android:layout_marginTop="@dimen/eight_dip"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/eight_dip"
        android:layout_marginEnd="@dimen/eight_dip"
        android:textColor="#333333"
        android:layout_toEndOf="@+id/card"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:text="我是作者"
        android:layout_below="@+id/title"
        android:layout_marginStart="@dimen/eight_dip"
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/user"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/eight_dip"
        android:textColor="#666666"
        android:layout_toEndOf="@+id/card"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/eight_dip"
        android:text="我是时间"
        android:id="@+id/time"
        android:layout_alignBottom="@+id/card"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content" />

</RelativeLayout>