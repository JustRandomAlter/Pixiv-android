<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.othershe.library.NiceImageView
        android:id="@+id/image"
        android:layout_width="160dp"
        android:layout_margin="@dimen/eight_dip"
        android:src="@color/colorPrimary"
        app:corner_radius="@dimen/four_dp"
        android:layout_height="115dp" />

    <TextView
        android:id="@+id/all_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image"
        android:layout_alignTop="@+id/image"
        android:background="#40000000"
        android:padding="6dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/title"
        android:text="我是标题"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/eight_dip"
        android:layout_marginEnd="@dimen/eight_dip"
        android:textColor="#333333"
        android:layout_toEndOf="@+id/image"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:text="我是作者"
        android:layout_below="@+id/title"
        android:layout_marginEnd="@dimen/eight_dip"
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/user"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/eight_dip"
        android:textColor="#666666"
        android:layout_toEndOf="@+id/image"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="我是时间"
        android:layout_marginEnd="@dimen/eight_dip"
        android:id="@+id/time"
        android:layout_alignBottom="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/eight_dip"
        android:layout_height="wrap_content" />

</RelativeLayout>