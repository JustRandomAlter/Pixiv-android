<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/twelve_dip"
        android:src="@color/colorPrimary" />

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twelve_dip"
        android:layout_toEndOf="@+id/comment_head"
        android:text="lenivaya10001"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/eight_dip"
        android:layout_marginTop="@dimen/twelve_dip"
        android:layout_marginEnd="@dimen/twelve_dip"
        android:text="2018-04-24 06:39"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_name"
        android:layout_marginTop="@dimen/eight_dip"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:layout_toEndOf="@+id/comment_head"
        android:paddingEnd="@dimen/twelve_dip"
        android:text="2018-04-24 06:39"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rela_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/twelve_dip"
        android:layout_marginBottom="@dimen/twelve_dip"
        android:layout_toRightOf="@+id/comment_head"
        android:background="#f2f4f5"
        android:padding="6dp">

        <TextView
            android:id="@+id/parent_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="q@qwre"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/parent_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parent_comment_name"
            android:text="哈哈阿凡达阿飞阿飞大师傅"
            android:textColor="#808080"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rela_parent"
        android:layout_toEndOf="@+id/comment_head"
        android:background="#EEEEEE" />

</RelativeLayout>